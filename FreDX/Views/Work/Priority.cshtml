@{
    Layout = "~/Views/nav/Nav-up.cshtml";
}
@model List<FreDX.Models.Priority>
<!DOCTYPE html>

<html>
<head >
    <meta name="viewport" content="width=device-width" />
    <title>Приоритетные заявки</title>
</head>
<body class="main">
    <div>
        <div id="Priority" class="applic-form">
            <table class="Nav-Table">
                <tr>
                    <td class="td-nav">@Html.ActionLink("Информация о поступлении", "Enter", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                    <td class="td-nav">@Html.ActionLink("Изобретение", "Invention", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                    <td class="td-nav">@Html.ActionLink("Заявители", "Applicants", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                    <td class="td-nav">@Html.ActionLink("Изобретатели", "Inventors", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                    <td class="td-nav">@Html.ActionLink("Агенты", "Agents", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                    <td class="td-nav">@Html.ActionLink("Приоритетные документы", "Priority", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                    <td class="td-nav">@Html.ActionLink("Заявка", "Application", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                </tr>
            </table>
            <div>
                <table id="Agent" border="1" class="Table-list-app">
                    <tr class="Table-list-app">
                        <td>№</td>
                        <td>Номер заявки</td>
                        <td>Дата приоритета</td>
                        <td>Ведомство</td>
                        <td>Страна</td>
                        <td></td>
                        <td></td>
                    </tr>
                    @{ int i = 1;}
                    @{foreach (var m in Model)
                        {
                            <tr class="Table-list-app">
                                <td>@i</td>
                                <td>@Html.DisplayFor(mod => m.IdClaim)
                                <td>@Html.DisplayFor(mod => m.DataInv)
                                <td>
                                    @Html.DropDownListFor(mod => m.Department, ViewBag.ListCountry2 as SelectList, "---", new { @class = "add-Priority-Department-in", @id = "Department" + @i })
                                    <script>document.getElementById("Department"+@i).selectedIndex = "@m.Department";</script>
                                <td>
                                    @Html.DropDownListFor(mod => m.Country, ViewBag.ListCountry as SelectList, "---", new { @class = "add-Priority-Country-in", @id = "Country" + @i })
                                    <script>document.getElementById("Country"+@i).selectedIndex = "@m.Country";</script>
                                </td>
                                <td class="Table-list-app-col">@Html.ActionLink("Удалить", "DelPr", new { num = m.Numerator, Id = m.Id }, new { @class = "btn-dc-table" })</td>
                                <td class="Table-list-app-col">@Html.ActionLink("Изменить", "EditPr", new { num = m.Numerator, Id = m.Id }, new { @class = "btn-dc-table" })</td>
                            </tr>
                            i++;
                        }
                    }
                </table>
            </div>
        </div>
        @Html.ActionLink("Добавить", "AddPr", new { num = ViewBag.Id }, new { @class = "butn-form-table" })
    </div>
</body>
</html>
