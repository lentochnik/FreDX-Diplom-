@model FreDX.Models.Agent


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Agent</h4>
        <hr />
        <div class="form-group">
            <label for="AgentNumber-Edit"class="control-label col-md-2">Номер агента</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AgentNumber, new { htmlAttributes = new { @class = "form-control", @id = "AgentNumber-Edit" } })
                @Html.ValidationMessageFor(model => model.AgentNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="AgentName-Edit" class="control-label col-md-2">Имя агента</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @id = "AgentName-Edit" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Status" class="control-label col-md-2">Статус агента</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status, ViewBag.ListStatus as SelectList, "---", new { @class = "form-control", @id = "Status" })
                <script>document.getElementById("Status").selectedIndex = "@Model.Status";</script>
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="AgentCountry-Edit" class="control-label col-md-2">Страна</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Country, ViewBag.ListCountry as SelectList, "---", new { @class = "form-control", @id = "AgentCountry-Edit" })
                <script>
                    document.getElementById("AgentCountry-Edit").selectedIndex = "@Model.Country";
                </script>
                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="AgentZip-Edit" class="control-label col-md-2">Индекс</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Zip, new { htmlAttributes = new { @class = "form-control", @id="AgentZip-Edit" } })
                @Html.ValidationMessageFor(model => model.Zip, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="AgentTegion-Edit" class="control-label col-md-2">Область</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Region, new { htmlAttributes = new { @class = "form-control", @id="AgentTegion-Edit" } })
                @Html.ValidationMessageFor(model => model.Region, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="AgentCity-Edit" class="control-label col-md-2">Город</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @id = "AgentCity-Edit" } })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="AgentAdress-Edit" class="control-label col-md-2">Адрес</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Adress, new { htmlAttributes = new { @class = "form-control", @id = "AgentAdress-Edit" } })
                @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Numerator" class="control-label col-md-2">Номер заявки</label>
            <div class="col-md-10">
                <input type="text" id="Numerator" class="form-control" value="@ViewBag.Id" readonly="readonly"  />
                @Html.ValidationMessageFor(model => model.Numerator, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

    <div>
        @Html.ActionLink("Назад", "Agents", new { num = ViewBag.Id })
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
