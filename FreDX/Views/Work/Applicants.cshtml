
@model List<FreDX.Models.Appl>
@{
    Layout = "~/Views/nav/Nav-up.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body class="main">
    <div>
        <div id="Applicants" class="applic-form">
            <table class="Nav-Table">
                <tr>
                    <td class="td-nav">@Html.ActionLink("Информация о поступлении", "Enter", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                    <td class="td-nav">@Html.ActionLink("Изобретение", "Invention", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                    <td class="td-nav">@Html.ActionLink("Заявители", "Applicants", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                    <td class="td-nav">@Html.ActionLink("Изобретатели", "Inventors", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                    <td class="td-nav">@Html.ActionLink("Агенты", "Agents", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                    <td class="td-nav">@Html.ActionLink("Приоритетные документы", "Priority", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                    <td class="td-nav">@Html.ActionLink("Заявка", "Application", new { num = ViewBag.Id }, new { @class = "Link-Nav-But" })</td>
                </tr>
            </table>
            <div>
                <table id="Appls" class="Table-list-app">
                    <tr class="Table-list-app">
                        <td class="Table-list-app-col">№</td>
                        <td class="Table-list-app-col">Имя заявителя</td>
                        <td class="Table-list-app-col">Страна проживания</td>
                        <td class="Table-list-app-col">Адрес</td>
                        <td class="Table-list-app-col"></td>
                        <td class="Table-list-app-col"></td>
                    </tr>
                    @{ int i = 1;}
                    @{foreach (var applicant in Model)
                        {
                            <tr class="Table-list-app">
                                <td class="Table-list-app-col">@i</td>
                                <td class="Table-list-app-col"><input type="text" id="Applicant" value="@applicant.Applicant" readonly="readonly" class="Tex-tabl-List"/></td>

                                <td class="Table-list-app-col">
                                    @Html.DropDownList("list", ViewBag.ListCountry as SelectList, "---", new { @class = "Tex-tabl-List", @id = "Country" + @i, @readonly = "readonly" })
                                    <script>document.getElementById("Country"+@i).selectedIndex = "@applicant.Country";</script>
                                </td class="Table-list-app-col">
                                <td class="Table-list-app-col"><input type="text" id="City" value="@applicant.Adress" readonly="readonly" class="Tex-tabl-List"/></td>

                                <td class="Table-list-app-col">@Html.ActionLink("Удалить", "DelApp", new { num = applicant.Numerator, Id = applicant.Id }, new { @class = "btn-dc-table" })</td>
                                <td class="Table-list-app-col">@Html.ActionLink("Изменить", "EditApl", new { num = applicant.Numerator, Id = applicant.Id }, new { @class = "btn-dc-table" })</td>

                            </tr>
                            i++;
                        }
                    }
                </table>
            </div>
            @Html.ActionLink("Добавить", "AddAppl", new { num = ViewBag.Id }, new { @class = "butn-form-table" })
        </div>
    </div>
</body>
</html>
